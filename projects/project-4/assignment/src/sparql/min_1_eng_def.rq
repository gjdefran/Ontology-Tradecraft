# Title: 
#    Definition Required
# Constraint Description: 
#    Any class or object property must have a non-empty definition with an English language tag.  
# Severity:
#     Warning

SELECT ?entity ?definition
WHERE {
  {
    ?entity a owl:Class .
  }
  UNION
  {
    ?entity a owl:ObjectProperty .
  }
  OPTIONAL {
    ?entity rdfs:comment ?definition .
    FILTER (lang(?definition) = "en")
  }
  FILTER (
    !BOUND(?definition) || STRLEN(STR(?definition)) = 0
  )
}