# Title: 
#    No Class Should Be Outside the BFO Hierarchy
# Constraint Description: 
#     All classes must have a BFO superclass.
# Severity:
#     Error

PREFIX rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX owl:  <http://www.w3.org/2002/07/owl#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

SELECT ?class
WHERE {
  ?class a owl:Class .

  # Exclude BFOâ€™s own classes from being checked
  FILTER(!STRSTARTS(STR(?class), "http://purl.obolibrary.org/obo/BFO_"))

  # (Optional) also exclude owl:Thing
  FILTER(STR(?class) != STR(owl:Thing))

  # Flag classes that do NOT have a BFO superclass (direct or indirect)
  FILTER NOT EXISTS {
    ?class rdfs:subClassOf+ ?superclass .
    FILTER(STRSTARTS(STR(?superclass), "http://purl.obolibrary.org/obo/BFO_"))
  }
}